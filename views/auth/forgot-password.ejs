<%- include('../partials/header', { title: 'Forgot Password' }) %>
  <section class="auth-section">
    <div class="auth-card">
      <h1><i class="fas fa-key"></i> Forgot Password</h1>
      
      <% if (messages.error) { %>
        <div class="alert alert-danger">
          <%= messages.error %>
        </div>
      <% } %>
      
      <% if (messages.success) { %>
        <div class="alert alert-success">
          <%= messages.success %>
        </div>
      <% } else { %>
        <form id="forgot-password-form" method="POST" action="/auth/forgot-password">
          <div class="form-group">
            <label for="email"><i class="fas fa-envelope"></i> Email Address</label>
            <input type="email" id="email" name="email" required>
            <p class="hint">Enter the email address associated with your account</p>
          </div>
          
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-paper-plane"></i> Send Reset Link
          </button>
          
          <div class="auth-links">
            <a href="/auth/login">Remember your password? Login</a>
          </div>
        </form>
      <% } %>
    </div>
  </section>
<%- include('../partials/footer') %>